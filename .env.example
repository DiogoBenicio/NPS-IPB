# Database Configuration
# ATENÇÃO: ALTERE ESTAS CREDENCIAIS EM PRODUÇÃO!
POSTGRES_DB=nps_db
POSTGRES_USER=nps_admin
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# Backend Configuration
# ATENÇÃO: GERE UM JWT_SECRET FORTE E ALEATÓRIO!
# Use: openssl rand -base64 64
DATABASE_URL=postgresql://nps_admin:CHANGE_THIS_PASSWORD_IN_PRODUCTION@database:5432/nps_db?schema=public
JWT_SECRET=CHANGE_THIS_JWT_SECRET_USE_OPENSSL_RAND_BASE64_64
PORT=5000
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=/api
VITE_API_PROXY_TARGET=http://backend:5000

